
extends ../layout

block content

    .container

        .page-header
            h1= $title

        .panel.panel-default
            .panel-heading
                h3.panel-title Database Status:
            .panel-body
                if $created
                    p.text-success Created
                else
                    p.text-danger Not created

        .panel.panel-default
            .panel-heading
                h3.panel-title Actions
            .panel-body
                .row
                    .col-md-6: a.btn.btn-default.btn-block(href=$getUrl) Back to Database Details
                    .col-md-6: a.btn.btn-default.btn-block(href=$indexUrl) Back to Database Index
                                              