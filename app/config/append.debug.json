{
    "phpOptions": {
        "displayErrors": 1,
        "displayStartupErrors": 1,
        "errorReporting": "{{errorLevels.all}}",
        "xdebug.maxNestingLevel": 10000
    },

    "features": {
        "logger": {
            "adapter": "file",
            "options": {
                "path": "{{path}}/logs"
            },
            "level": "all"
        }
    }
}